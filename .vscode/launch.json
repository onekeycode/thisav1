    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/example/video.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Web",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Proxy",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/proxy-vjav.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}